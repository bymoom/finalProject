<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page trimDirectiveWhitespaces="true" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>

<div class="col-md-9">
  <div class="card card-primary card-outline">
    <div class="card-header">
      <h3 class="card-title">문자 발송</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <div class="form-group">
      	<table class="table text-center">
      		<tr>
      			<th>이 름 : </th>
      			<td><input class="form-control" placeholder="${mem_name }"></td>
      		</tr>
      		<tr>
      			<th>전화번호 : </th>
      			<td><input class="form-control" placeholder="${mem_phone }"></td>
      		</tr>
      		<tr>
      			<th>내용 : </th>
      			<td><textarea id="compose-textarea" class="form-control" style="height: 400px;"></textarea></td>
      		</tr>
      	</table>
      </div>
      <div class="form-group">
          <textarea id="compose-textarea" class="form-control" style="height: 500px; display: none;">
          </textarea>
      </div>
      </div>
    <!-- /.card-body -->
    <div class="card-footer">
      <div class="float-right">
        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i>보내기</button>
      </div>
      <button type="reset" class="btn btn-default"><i class="fas fa-times"></i>취소</button>
    </div>
    <!-- /.card-footer -->
  </div>
  <!-- /.card -->
</div>